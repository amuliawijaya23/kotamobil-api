{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowJs": true,
    "strict": true,
    "noImplicitAny": true,
    "paths": {
      "@db/*": ["./src/db/*"],
      "@auth/*": ["./src/auth/*"],
      "@lib/*": ["./src/lib/*"],
      "@middlewares/*": ["./src/middleware/*"],
      "@routers/*": ["./src/routers/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist/*"],
  "lib": ["es6"]
}
